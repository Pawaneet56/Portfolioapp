<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/font_size20"
        android:layout_gravity="center|center_horizontal"
        android:text="ABC"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        android:id="@+id/bottomsheetfilter"/>

    <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
        android:id="@+id/searchMultiSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >
    </com.androidbuts.multispinnerfilter.MultiSpinnerSearch>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:orientation="vertical">
    <RadioButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/r1"
    android:layout_margin="30dp"
    android:text="Paid"
    android:fontFamily="@font/montserrat_regular"
    android:onClick="onRadioButtonClicked"
    android:layout_marginLeft="50dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_margin="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Unpaid"
        android:onClick="onRadioButtonClicked"
        android:layout_marginLeft="50dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioButtonClicked"
        android:id="@+id/r3"
        android:text="Projects"
        android:fontFamily="@font/montserrat_regular"
        android:layout_margin="30dp"
        android:layout_marginLeft="50dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4"
            android:layout_margin="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Part Time Jobs "
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="50dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/r5"
            android:layout_margin="30dp"
            android:text="Internships"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="50dp"/>

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:padding="5dp">
    <androidx.appcompat.widget.AppCompatButton

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:id="@+id/bottom_close"
        android:background="@drawable/btn_customs"
        android:elevation="5dp"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/bottom_apply"
            android:background="@drawable/btn_customs"
            android:elevation="5dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>


    </LinearLayout>

</LinearLayout>