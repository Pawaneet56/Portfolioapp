<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:background="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        tools:context=".ProfileFragment"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="75dp"
                android:layout_marginBottom="30dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image"
                    android:clickable="true"
                    android:background="@drawable/ic_baseline_person_outline_24"
                    android:scaleType="fitCenter"/>


            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_baseline_border_color_24"
                app:iconSize="24dp"
                app:iconPadding="24dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editbutton"
                android:layout_alignRight="@+id/editbutton"
                android:layout_marginTop="-35dp"
                android:layout_marginBottom="-34dp"
                android:layout_marginRight="48dp"
                android:padding="5dp"
                android:text="EditProfile"
                android:textAppearance="@style/Bold"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/posts"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/inputs"
                android:layout_alignParentRight="true"
                android:drawablePadding="7dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editbutton"
                android:paddingLeft="10dp"
                app:icon="@drawable/ic_add_post"
                app:iconSize="26dp"
                app:iconPadding="24dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/viewpostbyme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editbutton"
                android:layout_alignRight="@+id/editbutton"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="-34dp"
                android:layout_marginRight="48dp"
                android:padding="5dp"
                android:text="Projects by me"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Bold"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp" >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Name"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:id="@+id/name1"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textSize="17dp"
                android:id="@+id/name"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Email"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"/>

            <TextView
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/inputs"
                android:drawablePadding="7dp"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Year"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black" />


            <NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:hint="Year"
                android:inputType="number"
                android:id="@+id/year"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:id="@+id/year1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"
                android:text="College"
                android:drawableLeft="@drawable/ic_baseline_people_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:textSize="17dp"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:id="@+id/college"/>
        </LinearLayout>
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/spinner1"
            android:ellipsize="none"
            android:maxLines="100"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            android:scrollHorizontally="true"
            android:layout_margin="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"
                android:text="Bio"
                android:drawableLeft="@drawable/ic_baseline_people_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:hint="Bio"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:id="@+id/bio1"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputs"
                android:hint="Bio"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:id="@+id/bio"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Experiences"
                android:drawableLeft="@drawable/ic_baseline_verified_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:paddingRight="100dp"
                android:textAppearance="@style/Bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editexperience"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconSize="24dp"
                app:iconPadding="24dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:layout_alignParentRight="true"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayout"
            android:background="@drawable/inputs"
            android:layout_margin="4dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Experiences"
                android:id="@+id/experience1"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Skills"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/editskills"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconSize="24dp"
                app:iconPadding="24dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:layout_alignParentRight="true"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skills"
                android:id="@+id/skills1"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>



            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="ExtraCurricular"
                android:drawableLeft="@drawable/ic_baseline_music_note_24"
                android:layout_margin="4dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textAppearance="@style/Bold"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/editExtraCurriculars"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconSize="24dp"
                app:iconPadding="24dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:layout_alignParentRight="true"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/inputs"
            android:layout_margin="4dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ExtraCurricular"
                android:id="@+id/extraCurricular1"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ExtraCurricular"
                android:id="@+id/extraCurricular"
                android:textSize="17dp"
                android:drawablePadding="7dp"
                android:paddingLeft="10dp"
                android:layout_margin="4dp"
                android:textColor="@android:color/black"/>




        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:text="Save Profile"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_customs"
            android:layout_marginTop="20sp"
            android:id="@+id/savebutton"/>

    </LinearLayout>
</ScrollView>
