<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/avatar"
            android:id="@+id/luserpic"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="2dp"
            app:shapeAppearanceOverlay="@style/Circular"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/luserpic"
            android:layout_marginLeft="10dp"
            android:id="@+id/r1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCD"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/luname"
                android:textSize="@dimen/font_size_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/ltime"
                android:textSize="@dimen/font_size_medium"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKILLS"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:id="@+id/lskills"
            android:textSize="@dimen/font_size_medium"
            android:layout_below="@+id/luserpic"
            android:textStyle="bold"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lskills">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_end_color"
                android:drawableLeft="@drawable/ic_like"
                android:text="Accept"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:id="@+id/AcceptBtn"
                android:textSize="13dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cardview_shadow_end_color"
                android:drawableLeft="@drawable/ic_baseline_cancel_24"
                android:drawablePadding="5dp"
                android:text="DECLINE"
                android:textColor="@color/black"
                android:id="@+id/DeclineBtn"
                android:textSize="13dp" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>